{
    "compilerOptions": {
        "module": "es2022",
        "target": "es2022",
        "lib": [
            "es2022",
            "DOM",
            "DOM.Iterable"
        ],
        "outDir": "dist",
        "downlevelIteration": false,
        "allowUmdGlobalAccess": true,
        "noEmitOnError": true,
        "noImplicitOverride": true,
        "removeComments": true
    },
    "include": [ "*.ts" ]
}
